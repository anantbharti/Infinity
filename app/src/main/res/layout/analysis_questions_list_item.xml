<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aql_ques_des"
            android:text="Statement"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="6dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/aql_ques_des"
            android:id="@+id/aql_ques_img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aql_opt_a"
            android:text="Option A"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/aql_ques_img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aql_opt_b"
            android:text="Option B"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/aql_opt_a"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aql_opt_c"
            android:text="Option C"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/aql_opt_b"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aql_opt_d"
            android:text="Option D"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/aql_opt_c"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aql_cor_opt"
            android:text="Correct option: "
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/aql_opt_d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aql_res_opt"
            android:text="No response"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:textColor="#970A00"
            android:layout_below="@id/aql_opt_d"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
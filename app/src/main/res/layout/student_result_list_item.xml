<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sr_li_rl"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/sr_li_test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Test name"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sr_li_test_name"
            android:layout_marginHorizontal="5dp"
            android:text="Attempted by"
            android:id="@+id/by_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sr_li_test_name"
            android:layout_marginHorizontal="5dp"
            android:text="On :"
            android:id="@+id/sr_li_test_date"/>
        <TextView
            android:id="@+id/sr_li_stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Student name"
            android:layout_marginHorizontal="5dp"
            android:layout_toLeftOf="@id/sr_li_stu_roll"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/by_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll no"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="5dp"
            android:textColor="#000000"
            android:layout_below="@id/by_tv"
            android:id="@+id/sr_li_stu_roll"/>
        <TextView
            android:id="@+id/sr_li_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Score"
            android:layout_marginHorizontal="5dp"
            android:layout_toLeftOf="@id/sr_li_stu_roll"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/sr_li_stu_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen minimized 5 times"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="5dp"
            android:textColor="#000000"
            android:layout_below="@id/sr_li_stu_name"
            android:id="@+id/sr_li_sc_min_cnt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_below="@+id/sr_li_score"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="View"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/button_rad"
                android:layout_marginHorizontal="5dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/sr_li_analyse"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>